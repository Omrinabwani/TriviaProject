<Window x:Class="Trivia_Client.GameResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Results"
        Height="450" Width="700"
        Background="#FF1E1E2F"
        WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI" FontSize="16"
        Foreground="White"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🏁 Game Results"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock x:Name="WaitingTextBlock"
                   Grid.Row="1"
                   Text="⏳ Waiting for other players to finish..."
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="LightGray"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   Visibility="Visible"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <TextBlock x:Name="ResultsTextBlock"
                       TextWrapping="Wrap"
                       Margin="10"
                       Visibility="Collapsed"/>
        </ScrollViewer>

        <Button x:Name="BackToMenuButton" Grid.Row="2" Content="Back to Menu"
                Width="150"
                Height="40"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="BackToMenu_Click"
                Background="#FF3A3A5C"
                BorderBrush="Transparent"
                Foreground="White"
                FontWeight="Bold"
                Cursor="Hand"/>
    </Grid>
</Window>
