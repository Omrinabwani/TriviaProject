<Window x:Class="Trivia_Client.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#002B36">

    <Border Background="DarkSlateBlue" CornerRadius="20" Padding="30" Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="600">

            <TextBlock Text="🧠 Trivia Game"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <TextBlock x:Name="QuestionText"
                       Text="What is the capital of France?"
                       FontSize="20"
                       Foreground="White"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <UniformGrid Columns="2" Rows="2" Margin="0,0,0,20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="AnswerButton1" Content="Answer 1" Click="AnswerClicked"
                        Padding="10" Background="DarkCyan" Foreground="White" FontWeight="Bold" Margin="5"/>
                <Button x:Name="AnswerButton2" Content="Answer 2" Click="AnswerClicked"
                        Padding="10" Background="DarkCyan" Foreground="White" FontWeight="Bold" Margin="5"/>
                <Button x:Name="AnswerButton3" Content="Answer 3" Click="AnswerClicked"
                        Padding="10" Background="DarkCyan" Foreground="White" FontWeight="Bold" Margin="5"/>
                <Button x:Name="AnswerButton4" Content="Answer 4" Click="AnswerClicked"
                        Padding="10" Background="DarkCyan" Foreground="White" FontWeight="Bold" Margin="5"/>
            </UniformGrid>
            

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <TextBlock Text="📄 Questions Left: " Foreground="White" FontSize="14" />
                <TextBlock x:Name="QuestionsLeft" Text="10" Foreground="LightBlue" FontSize="14" Margin="5,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Top">
                <TextBlock Text="⏱️ Time Left:" Foreground="White" FontSize="14" VerticalAlignment="Center"/>
                <TextBlock x:Name="TimeLeft" Text="30s" Foreground="Orange" FontSize="14" Margin="5,0" VerticalAlignment="Center"/>

                <Rectangle Width="30" />

                <Button x:Name="LeaveGameButton"
            Content="🚪 Leave Game"
            Background="#FF3A3A"
            Foreground="White"
            FontWeight="Bold"
            Padding="10,2"
            FontSize="12"
            Margin="10,0"
            BorderThickness="0"
            Cursor="Hand"
            Click="LeaveGameFunction">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" ShadowDepth="1" Opacity="0.4"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                    CornerRadius="10"
                                    Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>


            <TextBlock x:Name="ServerResponse" FontSize="14" Foreground="DarkGray" TextAlignment="Center"/>

        </StackPanel>
    </Border>
</Window>
