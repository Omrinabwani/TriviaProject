<Window x:Class="Wpf_learning.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Statistics"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Border Background="DarkSlateBlue" CornerRadius="15" Padding="30" Margin="20">
        <Grid>
            <Button Content= "⟵ Back" Click="GetBackFunction" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Padding= "6" Background = "DarkCyan" Foreground="DarkGray" FontWeight="Bold" Margin="0,0,0,10"/>
            <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="📊 Statistics"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Content="📝 Personal stats"
                        Click="PersonalStatsFunction"
                        Width="150"
                        Padding="6"
                        Background="DarkCyan"
                        Foreground="DarkGray"
                        FontWeight="Bold"
                        Margin="0,10"/>

                <Button Content="🏆 Highscores"
                        Click="HighscoresFunction"
                        Width="150"
                        Padding="6"
                        Background="DarkCyan"
                        Foreground="DarkGray"
                        FontWeight="Bold"
                        Margin="0,20"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
