<Window x:Class="Wpf_learning.PersonalStatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Your Statistics"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Border Background="DarkSlateBlue" CornerRadius="15" Padding="30" Margin="20">
        <Grid>
        <Button Content="⟵ Back"
         Click="GetBackFunction"
         HorizontalAlignment="Left"
         VerticalAlignment="Top"
         Width="100"
         Padding="6"
         Background="DarkCyan"
         Foreground="DarkGray"
         FontWeight="Bold"
         Margin="0,0,0,20"/>
            <StackPanel x:Name="StatsPanel" Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="📊 Personal Stats"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="(Your personal performance summary)"
                           FontSize="16"
                           Foreground="LightGray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                
            </StackPanel>
        </Grid>
    </Border>
</Window>
