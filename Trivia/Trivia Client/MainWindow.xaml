<Window x:Class="Wpf_learning.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_learning"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
       <Border Background= "DarkSlateBlue" CornerRadius="15" Padding="30" Margin="20">
        <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text= "🌊 Welcome!" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment= "Center" Margin="0,0,0,20"/>
                <Button Content= "🐚 Signup" Click="Signup" Width="100" Padding= "6" Background = "DarkCyan" Foreground="DarkGray" FontWeight="Bold" Margin="0,0,0,10"/>
                <Button Content= "🌐 Login" Click="Login" Width="100" Padding= "6" Background = "DarkCyan" Foreground="DarkGray" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Name ="ServerResponse" FontSize= "16" Foreground= "DarkGray"/>
        </StackPanel>
        </Border>
    </Grid>
</Window>
