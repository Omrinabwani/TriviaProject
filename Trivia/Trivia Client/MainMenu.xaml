<Window x:Class="Wpf_learning.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Menu"
        Height="450"
        Width="800"
        WindowStartupLocation="CenterScreen">

    <Border Background="DarkSlateBlue" CornerRadius="15" Padding="30" Margin="20">
        <Grid>
            <StackPanel Margin="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="🌊 Main Menu"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Content="🔧 Create Room"
                        Click="CreateRoomFunction"
                        Width="150"
                        Padding="6"
                        Background="DarkCyan"
                        Foreground="DarkGray"
                        FontWeight="Bold"
                        Margin="0,10"/>

                <Button Content="🧜‍ Join Room"
                        Click="JoinRoomFunction"
                        Width="150"
                        Padding="6"
                        Background="DarkCyan"
                        Foreground="DarkGray"
                        FontWeight="Bold"
                        Margin="0,10"/>

                <Button Content="📊 Statistics"
                        Click="StatisticsFunction"
                        Width="150"
                        Padding="6"
                        Background="DarkCyan"
                        Foreground="DarkGray"
                        FontWeight="Bold"
                        Margin="0,10"/>

                <Button Content="🏝️ Logout"
                        Click="ExitFunction"
                        Width="150"
                        Padding="6"
                        Background="IndianRed"
                        Foreground="White"
                        FontWeight="Bold"
                        Margin="0,10"/>
                <TextBlock Name ="ServerResponse" FontSize= "16" Foreground= "DarkGray"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
